{
    "outputDirectory": "public",
    "functions": {
        "api/**/*.ts": {
            "memory": 1024,
            "maxDuration": 10,
            "includeFiles": "backend/**/*"
        }
    },
    "rewrites": [
        {
            "source": "/api/simple",
            "destination": "/api/simple.js"
        },
        {
            "source": "/api/health",
            "destination": "/api/health"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDirs": [
            ".",
            "backend"
        ],
        "strict": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": [
        "api/**/*",
        "backend/**/*"
    ],
    "exclude": [
        "node_modules",
        "frontend"
    ]
}